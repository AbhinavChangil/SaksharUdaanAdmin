<!-- res/drawable/checkbox_custom.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#308d46"/> <!-- Fill color when checked -->
            <stroke android:width="2dp" android:color="#888A89"/> <!-- Border color when checked -->
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#252525"/> <!-- Fill color when unchecked -->
            <stroke android:width="2dp" android:color="#888A89"/> <!-- Border color when unchecked -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
